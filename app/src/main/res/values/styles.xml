<resources>

    <!-- Base application themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/foreground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Detail Activity Buttons -->
    <style name="MovieButtonStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieButtonContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieButtonIconStyle">
        <item name="android:layout_width">@dimen/detail_button_icon_size</item>
        <item name="android:layout_height">@dimen/detail_button_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MovieButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/detail_button_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Detail Activity Item -->
    <style name="MovieItemIconsStyle">
        <item name="android:layout_height">@dimen/detail_icon_size</item>
        <item name="android:layout_width">@dimen/detail_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MovieItemHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_item_textSize</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MovieItemValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/detail_item_textSize</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Detail Activity Crew Style -->
    <style name="MovieCrewItemValueStyle" parent="@style/MovieItemValueStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Detail Activity Cast Style -->
    <style name="MovieCastHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieCastImageStyle">
        <item name="android:layout_width">@dimen/detail_cast_image_width</item>
        <item name="android:layout_height">@dimen/detail_cast_image_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/default_image_background</item>
    </style>

    <style name="MovieCastTextHolderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieCastNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MovieCastRoleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Detail Activity See All Button -->
    <style name="MovieSeeAllHolderStyle">
        <item name="android:layout_height">@dimen/detail_see_all_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieSeeAllTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/detail_button_see_all</item>
    </style>

    <style name="MovieSeeAllArrowStyle">
        <item name="android:layout_height">@dimen/detail_arrow_size</item>
        <item name="android:layout_width">@dimen/detail_arrow_size</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Review Activity -->
    <style name="ReviewIconStyle" parent="MovieButtonIconStyle">
        <item name="android:layout_width">@dimen/review_user_icon_size</item>
        <item name="android:layout_height">@dimen/review_user_icon_size</item>
    </style>

    <style name="ReviewAuthorStyle" parent="MovieItemHeaderStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/review_username_textSize</item>
    </style>

    <style name="ReviewBodyStyle" parent="MovieItemValueStyle">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
